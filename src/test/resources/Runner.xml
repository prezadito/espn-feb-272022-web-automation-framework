<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ESPN Scoreboard Tracker" parallel="false">
    <parameter name="useCloudEnv" value="true"></parameter>
    <parameter name="cloudEnvName" value="Browserstack"></parameter>
    <parameter name="os" value="Windows"></parameter>
    <parameter name="os_version" value="11"></parameter>
    <parameter name="browserName" value="Chrome"></parameter>
    <parameter name="browserVersion" value="98"></parameter>
    <parameter name="url" value="https://espn.com/"></parameter>

    <test name="ESPN Header Test">
        <classes>
            <class name="test.CheckScoreboardTest"></class>
            <class name="test.CheckTeamsPreviousYearStandingTest"></class>
        </classes>
    </test>
</suite>